# =============================================================================
# LetsNormalizeIt Backend Configuration
# =============================================================================
# Copy this file to .env and update the values according to your environment

# =============================================================================
# Server Configuration
# =============================================================================
LNI_SERVER_PORT=8080
LNI_SERVER_ALLOW_ORIGINS=*

# =============================================================================
# Firebase Configuration
# =============================================================================
# Path to your Firebase service account credentials JSON file
LNI_FIREBASE_CREDENTIALS_FILE=./firebase-credentials.json
# Your Firebase project ID (found in Firebase Console)
LNI_FIREBASE_PROJECT_ID=your-firebase-project-id

# =============================================================================
# MongoDB Configuration
# =============================================================================
# MongoDB connection URI
# For local development: mongodb://localhost:27017
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net
LNI_MONGODB_URI=mongodb://localhost:27017
# Database name to use
LNI_MONGODB_DATABASE=letsnormalizeit

# =============================================================================
# Redis Configuration
# =============================================================================
# Redis server address and port
LNI_REDIS_ADDRESS=localhost:6379
# Redis password (leave empty if no password)
LNI_REDIS_PASSWORD=
# Redis database number (0-15)
LNI_REDIS_DB=0

# =============================================================================
# Logger Configuration
# =============================================================================
# Log level: debug, info, warn, error, fatal
LNI_LOGGER_LEVEL=info
# Log encoding: json, console
LNI_LOGGER_ENCODING=json
